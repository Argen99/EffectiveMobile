<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleMedium" parent="BaseTextView">
        <item name="android:textSize">@dimen/ts_title_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TitleLarge" parent="BaseTextView">
        <item name="android:textSize">@dimen/ts_title_large</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="BodySmall" parent="BaseTextView">
        <item name="android:textSize">@dimen/ts_body_small</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/extra_light_gray</item>
    </style>

    <style name="BodyMedium" parent="BaseTextView">
        <item name="android:textSize">@dimen/ts_body_medium</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/extra_light_gray</item>
    </style>

    <style name="ButtonSmall" parent="BaseTextView">
        <item name="android:textSize">@dimen/ts_button_small</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Button" parent="BaseTextView">
        <item name="android:textSize">@dimen/ts_button</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Caption" parent="BaseTextView">
        <item name="android:textSize">@dimen/ts_caption</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>